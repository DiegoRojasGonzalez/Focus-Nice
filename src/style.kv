#:kivy 1.1.1
<UIStorage>
    MDScreen: 
        MDBoxLayout:
            orientation: 'vertical'
            padding: [dp(10),dp(10),dp(10),dp(10)]

            MDBoxLayout:
                orientation: 'horizontal'
                padding: [dp(12),dp(12),dp(12),dp(12)]
                MDLabel:
                    id: time
                    text: '25:00'
                    font_size: (self.width)/3
                    halign:'center'
                    size_hint: 0.7,1


            MDBoxLayout:
                orientation: 'horizontal'
                padding: [dp(72),dp(12),dp(12),dp(12)]
                spacing: dp(12)
                size_hint: 1,0.30

                MDFloatingActionButton:
                    id: estado
                    icon:'palette-outline'
                    elevation_normal: 12
                    #on_release: app.open_color_picker()
                MDFloatingActionButton:
                    id: control
                    icon:'play-circle-outline'
                    elevation_normal: 12
                    #on_release: app.button_state(*args)
                    on_release: app.start_pomodoro() 
                MDFloatingActionButton:
                    id: reset
                    icon:'restart'
                    elevation_normal: 12
                    #on_release: app.button_reset(*args)

#:kivy 1.1.1
#:import Image kivy.uix.image.Image

<UIStorage>
    MDScreen: 
        Image:
            source: 'images/background.jpg'
            allow_stretch: True
            keep_ratio: False
            opacity: 0.3
            fit_mode: 'fill'

        BoxLayout:
            orientation: 'vertical'
            padding: dp(16)
            pos_hint: {'center_y': 0.7}
            
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: dp(160)
                MDIconButton:
                    id: config_button
                    icon: 'information-variant'
                    on_release: app.show_bottom_sheet_info()
                    pos_hint: {'center_x': 0.25, 'center_y': 0.2}

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: dp(80)    
                MDLabel:
                    id: actually_state
                    text: ''
                    font_size: dp(20)
                    halign: 'center'
                    valign: 'middle'
                    font_style: 'H5'

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: dp(160)
                MDLabel:
                    id: time
                    text: '00:00'
                    font_size: dp(80)
                    halign: 'center'
                    valign: 'middle'

            FloatLayout:
                size_hint_y: None
                height: dp(80)
                pos_hint: {'center_x': 0.5, 'center_y': 0.2}

                MDIconButton:
                    id: play_button
                    icon: 'play-circle-outline'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.2}
                    on_release: app.play_pause_pomodoro()
                
                MDIconButton:
                    id: reset
                    icon: 'restart'
                    pos_hint: {'center_x': 0.75, 'center_y': 0.2}
                    on_release: app.reset_button()
                
                MDIconButton:
                    id: music_button
                    icon: 'music-off'
                    pos_hint: {'center_x': 0.25, 'center_y': 0.2}
                    on_release: app.play_pause_music()

                MDSlider:
                    id: slider_volume
                    orientation: 'vertical'
                    min: 0
                    max: 1
                    value: app.rain_sound.volume
                    on_value: app.rain_sound.volume = self.value
                    pos_hint: {'center_x': 0.25, 'center_y': 0.9}
                    hint: False


#:kivy 1.1.1
<UIStorage>
    MDScreen: 
        MDBoxLayout:
            orientation: 'vertical'            
            
            
            MDBoxLayout:
                orientation: 'horizontal'
                padding:  0, 100, 0, 0#espaciado de margen
                MDLabel:
                    id: time
                    text: '00:00'
                    font_size: (self.width)/3
                    halign:'center'
                    valign:'center'
                    size_hint: (1, 1)
                    bold: True
                    color: 0, 0, 0, 1
            MDBoxLayout:
                orientation: 'horizontal'
                padding:  0, 0, 0, 0#espaciado de margen
                spacing: 10 #espaciado
                size_hint: (1, 1)
                MDLabel:
                    id: actually_state
                    text: 'Pomodoro'
                    font_size: (self.width)/20
                    halign:'center'
            MDBoxLayout:
                orientation: 'horizontal'
                padding:  0, 0, 0, 0#espaciado de margen
                spacing: 10 #espaciado
                size_hint: (1, 1)
                
                MDFloatingActionButton:
                    id: play_button
                    icon:'play-circle-outline'
                    elevation_normal: 12
                    icon_size: (self.width)/2
                    on_release: app.play_pause_pomodoro()
                    #size
                    
                MDFloatingActionButton:
                    id: reset
                    icon:'restart'
                    elevation_normal: 12
                    on_release: app.reset_button()

            